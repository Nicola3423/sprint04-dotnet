@model Sessions_app.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h1>Excluir Paciente</h1>

<div class="alert alert-danger">
    <h3>Tem certeza que deseja excluir este paciente?</h3>
</div>

<div class="card">
    <div class="card-header">
        <h4>@Model.Nome</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">E-mail</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Data de Nascimento</dt>
            <dd class="col-sm-9">@(Model.DataNascimento.HasValue ? Model.DataNascimento.Value.ToString("dd/MM/yyyy") : "Não informado")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPaciente" />
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>