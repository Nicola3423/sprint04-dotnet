@{
    Layout = "_Layout";
    ViewData["Title"] = "Cuidados Dentais";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 style="color: #004080; font-weight: bold;">Cuidados Dentais</h2>
    </div>

    <div class="jumbotron" style="background-color: #e0f7ff; border-radius: 10px; padding: 2rem; color: #333;">
        <h1 class="display-5" style="color: #004080; font-weight: bold;">Dicas de Cuidados Dentais!</h1>
        <p class="lead" style="font-size: 1.1rem; color: #555; margin-bottom: 1.5rem;">Mantenha um sorriso saudável seguindo estas dicas:</p>

        <ul class="list-group list-group-flush" style="background-color: transparent;">
            <li class="list-group-item" style="background-color: transparent; color: #004080; font-size: 1.05rem;">
                <i class="fas fa-tooth" style="color: #0088cc; margin-right: 10px;"></i>
                Escove os dentes pelo menos duas vezes por dia.
            </li>
            <li class="list-group-item" style="background-color: transparent; color: #004080; font-size: 1.05rem;">
                <i class="fas fa-toothbrush" style="color: #0088cc; margin-right: 10px;"></i>
                Use fio dental diariamente.
            </li>
            <li class="list-group-item" style="background-color: transparent; color: #004080; font-size: 1.05rem;">
                <i class="fas fa-calendar-check" style="color: #0088cc; margin-right: 10px;"></i>
                Visite o dentista regularmente.
            </li>
            <li class="list-group-item" style="background-color: transparent; color: #004080; font-size: 1.05rem;">
                <i class="fas fa-apple-alt" style="color: #0088cc; margin-right: 10px;"></i>
                Mantenha uma dieta equilibrada, evitando açúcar excessivo.
            </li>
            <li class="list-group-item" style="background-color: transparent; color: #004080; font-size: 1.05rem;">
                <i class="fas fa-smoking-ban" style="color: #0088cc; margin-right: 10px;"></i>
                Evite fumar e usar tabaco.
            </li>
        </ul>

        <hr style="border-top: 2px solid #0088cc; margin-top: 1.5rem; margin-bottom: 1rem;">

        <p style="font-size: 1rem; color: #555;">Para mais informações, consulte um dentista.</p>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
