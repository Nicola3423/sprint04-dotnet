@model IEnumerable<Sessions_app.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Gerenciamento de Pacientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Paciente</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.IdPaciente" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.IdPaciente" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdPaciente" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>