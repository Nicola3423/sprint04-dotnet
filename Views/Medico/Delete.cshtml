@model Sessions_app.Models.Medico

@{
    ViewData["Title"] = "Excluir Médico";
}

<h1>Excluir Médico</h1>

<div class="alert alert-danger">
    <h3>Tem certeza que deseja excluir este médico?</h3>
</div>

<div class="card">
    <div class="card-header bg-success text-white">
        <h4>@Model.Nome</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">CRM</dt>
            <dd class="col-sm-9">@Model.CRM</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">E-mail</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdMedico" />
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>